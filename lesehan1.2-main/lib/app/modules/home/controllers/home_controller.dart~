  var selectedCategory = 'Nasi'.obs;
  var cartItems = 0.obs;
  var orderItems = <OrderItem>[].obs;
  var totalAmount = 0.0.obs;
  var discountAmount = 0.0.obs;
  var orders = <Map<String, dynamic>>[].obs;


  final categories = [
    {'icon': 'ðŸš', 'name': 'Nasi'},
    {'icon': 'ðŸ–', 'name': 'Ayam'},
    {'icon': 'ðŸŸ', 'name': 'Ikan'},
    {'icon': 'ðŸ¥¤', 'name': 'Minuman'},
    {'name': 'Daging', 'icon': 'ðŸ–'},
  ];



  final popularItems = [
